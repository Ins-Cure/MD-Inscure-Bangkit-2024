<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_bg_home"
    tools:context=".ui.disease.ListDiseaseActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:paddingTop="32dp"
        android:paddingBottom="12dp"
        app:title="@string/txt_list_disease"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        android:id="@+id/recycler_disease"
        android:layout_below="@+id/toolbar_disease"/>

</RelativeLayout>