<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/custom_bg_list"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_disease_thumbnail"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:contentDescription="@string/cd_disease_thumbnail"
        tools:ignore="ImageContrastCheck"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/container_text"
        android:layout_toEndOf="@+id/iv_disease_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_disease_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/txt_accracy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                tools:text="@tools:sample/lorem" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>